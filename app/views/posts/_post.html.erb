<% if post.errors.any? %>
  	<% post.errors.full_messages.each do |message| %>
		<%= alert_gen message %>
	<% end %>
<% end %>
<tr>
	<td>
		<%= link_to post.id , post_show_path(post.id) %>
	</td>
	<td>
		<%= post.user.full_name %>
	</td>
	<td>
		<%= post.date %>
	</td>
	<td>
		<%= post.rationale %>
	</td>
	<td>
		<%= status_label(post.status) %>
	</td>
	<td>
		<%= link_to "Edit", edit_post_path(post) if policy(post).update? %>
		<%= link_to "Delete", post_path(post) , method: :delete , data: { confirm: 'r u sure?' }  %>
		
	</td>
</tr>